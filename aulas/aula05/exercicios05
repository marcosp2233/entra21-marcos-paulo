10)    let vetor = []
       let numerosNegativos = 0
       let numerosPositivos = 0
          
        
        for(let i = 0; i < 10; i++) {
           vetor[i] = +prompt("Digite um valor")
          
            if (vetor[i] < 0){
            numerosNegativos++
          }
            else if (vetor[i] > 0) {
              numerosPositivos++
            }

          
        }
        console.log(`existem ${numerosNegativos} numeros negativos e ${numerosPositivos} positivos`)