8)      let vetor = []
        
        for(let i = 0; i < 6; i++) {
          vetor[i] = +prompt(`Digite numeros pares`)
          vetor.reverse(); //não consegui fazer sem o reverse
         
          if (vetor[i] % 2 === 0) {
             console.log(vetor)
          }
        
          else {
            console.log("O numero não é par")
            break
          }
       } 
        
